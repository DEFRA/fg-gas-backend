{
  "name": "fg-gas-backend",
  "version": "0.0.0",
  "description": "FG Grant Application Service",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "",
    "format:check": "npm run lint",
    "predev": "docker compose up -d mongodb",
    "dev": "node --watch src/main.js",
    "dev:debug": "node --watch --inspect src/main.js",
    "git:pre-commit-hook": "npm run lint -- --fix && npm test",
    "postinstall": "npm run setup:husky",
    "lint": "standard .",
    "test": "c8 --all --src src node --test 'src/**/*.test.*'",
    "test:watch": "node --watch --test './src/**/*.test.*'",
    "start": "NODE_ENV=production node .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@defra/hapi-tracing": "^1.0.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/wreck": "^18.1.0",
    "aws4": "^1.13.2",
    "convict": "^6.2.4",
    "hapi-pino": "^12.1.0",
    "hapi-pulse": "^3.0.1",
    "mongodb": "^6.12.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "husky": "^9.1.7",
    "standard": "^17.1.2"
  }
}
