{
  "name": "fg-gas-backend",
  "version": "0.0.0",
  "description": "FG Grant Application Service",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "",
    "format:check": "npm run lint",
    "dev": "node --watch src/main.js",
    "dev:debug": "node --watch --inspect src/main.js",
    "postinstall": "npm run setup:husky",
    "lint": "eslint",
    "format": "prettier . --ignore-unknown --list-different --write",
    "test": "c8 --all --src src node --test 'src/**/*.test.*'",
    "it": "node --test-timeout 60000 --test test/*.test.*",
    "test:watch": "node --watch --test './src/**/*.test.*'",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "lint-staged": {
    "**/*.js": "npm run lint",
    "*": "prettier --ignore-unknown --list-different --write"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@defra/hapi-tracing": "^1.0.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/wreck": "^18.1.0",
    "aws4": "^1.13.2",
    "convict": "^6.2.4",
    "hapi-pino": "^12.1.0",
    "hapi-pulse": "^3.0.1",
    "mongodb": "^6.12.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "neostandard": "^0.12.1",
    "prettier": "^3.5.3",
    "testcontainers": "^10.20.0"
  }
}
