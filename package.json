{
  "name": "fg-gas-backend",
  "version": "0.0.0",
  "description": "FG Grant Application Service",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "nodemon --env-file=.env src/main.js",
    "lint": "eslint",
    "test": "npm run test:unit -- --run && npm run test:integration -- --run",
    "test:unit": "vitest --config vitest.config.js --dir src",
    "test:integration": "vitest --config test/vitest.config.js --dir test",
    "test:integration:verbose": "PRINT_LOGS=1 npm run test:integration",
    "test:contract": "vitest --config test/contract/vitest.config.js --dir test/contract",
    "publish:agreement:update": "node scripts/publish-agreement-update-command.js",
    "publish:case:status:update": "node scripts/publish-case-status-update-command.js",
    "postinstall": "npm run setup:husky && npm run setup:env",
    "setup:env": "cp --update=none .env.example .env || true",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "migration:create": "migrate-mongo create",
    "token:local": "node --env-file=.env scripts/write-http-client-token.js local http-client 2099-01-01T00:00:00Z"
  },
  "lint-staged": {
    "**/*.js": "npm run lint",
    "*": "prettier --ignore-unknown --list-different --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.922.0",
    "@aws-sdk/client-sqs": "^3.917.0",
    "@defra/hapi-tracing": "^1.28.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.4.3",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.1.0",
    "ajv": "^8.17.1",
    "ajv-formats": "3.0.1",
    "aws4": "^1.13.2",
    "hapi-pino": "^13.0.0",
    "hapi-pulse": "^3.0.1",
    "hapi-swagger": "^17.3.2",
    "joi": "^17.13.3",
    "migrate-mongo": "^12.1.3",
    "mongodb": "^6.20.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "neostandard": "^0.12.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "testcontainers": "^11.7.2",
    "vitest": "^3.1.2"
  }
}
